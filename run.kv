<Car>:
  canvas:
    PushMatrix
    Rotate:
      axis: 0, 0, 1
      angle: self.angle
      origin: self.center


    Color:
      rgba:0, 1, 0, 1
    Rectangle:
      pos: self.pos
      size: self.size
    PopMatrix

<path>:
  canvas:
    Color:
      rgba: 0, 0, 1, 1
    Rectangle:
      pos:self.pos
      size:self.size
<Co>:
  canvas:
    Color:
      rgba: self.c, 0, 0, 1
    Rectangle:
      pos:self.pos
      size:self.size
  Label:
    text: self.parent.txt
    size: self.parent.size
    pos: self.parent.pos

<grid>:
  car: vroom
  Widget:
    canvas:
      Color:
        rgba: 1, .9, 1, 1
      Rectangle:
        pos:self.pos
        size:self.size
  Car:
    id: vroom
    size_hint: 0.015, 0.04

<Lcd>:
  BoxLayout:
    orientation: 'vertical'
    Label:
      text_size: self.size
      halign: 'left'
      valign: 'center'
      size:self.size
      pos: self.pos
      text: "  A:" + self.parent.parent.A
    Label:
      text_size: self.size
      halign: 'left'
      valign: 'center'
      size: self.size
      pos: self.pos
      text: "  B:" + self.parent.parent.B
    Label:
      text_size: self.size
      halign: 'left'
      valign: 'center'
      size: self.size
      pos: self.pos
      text: "  C:" + self.parent.parent.C

<triangulate>:
  Label:
    size: self.parent.size
    pos: self.parent.pos
    text: "ACTIVATE IPS"

<box>:
  canvas.before:
    PushMatrix
    Rotate:
      axis: 0, 0, 1
      angle: self.angle
      origin: self.center
  canvas.after:
    PopMatrix

  RelativeLayout:
    size: self.parent.size
    pos: self.parent.pos



    Widget:
      size_hint: (0.2, 0.25)
      pos_hint: {'x':0, 'y':0.75}
      canvas:
        Color:
          rgba: 1, 1, 1, 1
        Rectangle:
          pos: self.pos
          size: self.size
    Widget:
      size_hint: (0.2, 0.25)
      pos_hint: {'x':0, 'y':0.5}
      canvas:
        Color:
          rgba: 0, 0, 0, 1
        Rectangle:
          pos: self.pos
          size: self.size
    Widget:
      size_hint: (0.2, 0.25)
      pos_hint: {'x':0, 'y':0.25}
      canvas:
        Color:
          rgba: 1, 1, 1, 1
        Rectangle:
          pos: self.pos
          size: self.size
    Widget:
      size_hint: (0.2, 0.25)
      pos_hint: {'x':0}
      canvas:
        Color:
          rgba: 0, 0, 0, 1
        Rectangle:
          pos: self.pos
          size: self.size
    Widget:
      size_hint: (0.8, 1)
      pos_hint: {'x':0.2}
      canvas:
        Color:
          rgba: 1, 0, self.parent.parent.bc, 1
        Rectangle:
          pos: self.pos
          size:self.size


<rootclass>:
